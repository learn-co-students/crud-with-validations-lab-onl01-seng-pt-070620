<h1>Edit song </h1>

<%= form_for @song do |f| %>
<% if @song.errors.any? %>
<div id="error_explanation">
<h2>There were some errors:</h2>

<ul>
<% @song.errors.full_messages.each do |msg|%>
<li><%=msg%></li>
<%end%>
</ul>
</div>
<%end%>

    <%= f.label 'Artist Name' %><br>
    <%= f.text_field :artist_name %><br>

    <%= f.label 'Genre' %><br>
    <%= f.text_field :genre %><br>

    <%= f.label 'Title' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'Released' %><br>
    <%= f.check_box :released %><br>

    <%= f.label 'Released Year' %><br>
    <%= f.number_field :release_year %><br>

    <%= f.submit%>
<% end %>
